<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCombineOpenWordsNumber"
        android:layout_width="@dimen/search_item_width"
        android:layout_height="@dimen/search_item_height"
        android:layout_margin="@dimen/common_dimen_8"
        android:background="@drawable/error_btn_background"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCombineOpenText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/common_dimen_8"
        android:layout_marginTop="@dimen/common_dimen_8"
        android:layout_marginEnd="@dimen/common_dimen_8"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/tvCombineOpenTranslation"
        app:layout_constraintEnd_toStartOf="@+id/ivCombineOpenArrow"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvCombineOpenWordsNumber"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCombineOpenTranslation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/common_dimen_8"
        android:layout_marginEnd="@dimen/common_dimen_8"
        android:layout_marginBottom="@dimen/common_dimen_8"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivCombineOpenArrow"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvCombineOpenWordsNumber"
        app:layout_constraintTop_toBottomOf="@+id/tvCombineOpenText"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCombineOpenArrow"
        android:layout_width="@dimen/common_dimen_24"
        android:layout_height="@dimen/common_dimen_24"
        android:layout_marginEnd="@dimen/common_dimen_8"
        android:src="@drawable/ic_arrow_down"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>