<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/searchItemContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/open_combine_background"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSearchItemPreview"
        android:layout_width="@dimen/search_item_width"
        android:layout_height="@dimen/search_item_height"
        android:layout_marginStart="@dimen/common_dimen_8"
        android:layout_marginVertical="@dimen/common_dimen_8"
        android:background="@drawable/error_btn_background"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSearchItemTranslation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/common_dimen_8"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/ivSearchItemPreview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivSearchItemPreview"
        app:layout_constraintTop_toTopOf="@+id/ivSearchItemPreview" />

</androidx.constraintlayout.widget.ConstraintLayout>